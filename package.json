{
  "name": "easysubs",
  "version": "3.1.2",
  "description": "Browser extension for learning languages with watching movies and TV shows",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nitrino/easysubs.git"
  },
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.mjs",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "pnpm build:hmr && (run-p wss build:watch)",
    "dev:firefox": "pnpm build:hmr && (run-p wss build:firefox:watch)",
    "test": "vitest",
    "commitlint": "commitlint --edit",
    "lint": "eslint src --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier . --write"
  },
  "type": "module",
  "dependencies": {
    "@ifyour/deeplx": "^0.1.17",
    "anylang": "^3.3.0",
    "classnames": "^2.5.1",
    "effector": "^23.4.4",
    "effector-react": "^23.3.0",
    "m3u8-parser": "^7.2.0",
    "patronum": "^2.3.0",
    "qs": "^6.14.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-draggable": "^4.5.0",
    "react-hot-toast": "^2.6.0",
    "react-select": "^5.10.2",
    "stream-browserify": "^3.0.0",
    "subtitle": "^4.2.2",
    "webext-dynamic-content-scripts": "^10.0.4",
    "youtube-caption-extractor": "^1.9.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/chrome": "^0.1.33",
    "@types/m3u8-parser": "^7.2.6",
    "@types/node": "^25.0.9",
    "@types/qs": "^6.14.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/subtitle": "^2.0.6",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "chokidar": "^5.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "fs-extra": "^11.3.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.8.0",
    "rollup": "^4.55.1",
    "sass": "^1.97.2",
    "tailwindcss": "^4.1.18",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "ws": "^8.19.0"
  }
}
