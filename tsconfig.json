{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@hooks/*": ["hooks/*"],
      "@hocs/*": ["hocs/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["utils/*"],
      "@features/*": ["features/*"]
    },
  },
  "include": ["./src/**/*", "./global.d.ts"],
  "exclude": ["node_modules"]
}
